<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://help.aunited.ru/dtd/joomla/3.0/module-install.dtd">
<extension type="module" version="3.0" method="upgrade">
<name>MOD_JAPLAYER</name>
<author>Vitaliy Zhukov</author>
<creationDate>January 2018</creationDate>
<authorEmail>info@aunited.ru</authorEmail>
<authorUrl>http://aunited.ru</authorUrl>
<version>0.1</version>
<copyright>Copyright (c) 2018 AUnuted. All rights reserved.</copyright>
<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
<description>MOD_JAPLAYER_XML_DESCRIPTION</description>
<files>
	<folder>language</folder>
	<filename module="mod_japlayer">APlayer.min.js</filename>
	<filename module="mod_japlayer">APlayer.min.js.map</filename>
	<filename module="mod_japlayer">mod_japlayer.php</filename>
	<filename module="mod_japlayer">mod_japlayer.xml</filename>
	<filename>index.html</filename>
</files>

<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="title" type="text" label="Title" description="Music title" />
			<field name="description" type="text" label="Description" description="Music description" />
			<field name="source" type="text" label="Source URL" description="Music source file" />
			<field name="autoplay" type="radio" default="false" class="btn-group btn-group-yesno" label="Autoplay" description="Autoplay" >
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fieldset>
		<fieldset name="advanced">
            <field name="narrow" type="radio" default="0" class="btn-group btn-group-yesno" label="Narrow" description="Narrow style" >
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="color" type="color" default="#fff" label="Color" description="Player Color" />
			<field name="pic" type="media" default="" label="Picture" description="Music Picture" />
			<field name="width" type="integer" first="0" last="2048" step="20" default="300" label="Width" description="Player width" />
			<field name="height" type="integer" first="0" last="2048" step="20" default="300" label="Height" description="Playlist height" />
		</fieldset>
	</fields>
</config>

<updateservers>
	<server type="extension" priority="1" name="mod_japlayer"><![CDATA[http://help.aunited.ru/japlayer/update/JAPlayer-update.xml]]></server>
</updateservers>

</extension>
